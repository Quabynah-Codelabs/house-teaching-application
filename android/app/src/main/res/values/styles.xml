<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="HomeTutorAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="HomeTutorAppTheme.Light">
        <item name="android:statusBarColor">@color/app_scrim</item>
        <item name="android:navigationBarColor">@color/app_scrim</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

</resources>

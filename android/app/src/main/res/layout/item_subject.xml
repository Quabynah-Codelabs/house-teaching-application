<?xml version="1.0" encoding="utf-8"?>
<io.codelabs.widget.ForegroundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_normal"
    android:paddingStart="@dimen/padding_normal"
    android:paddingEnd="@dimen/padding_normal"
    android:layout_width="match_parent"
    android:background="@color/background_card"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content">

    <io.codelabs.widget.BaselineGridTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="English Language"
        android:textAppearance="@style/TextAppearance.HomeTutorAppTheme.SmallTitle"
        android:textColor="@color/text_primary_dark"
        android:id="@+id/subject_name" />

    <io.codelabs.widget.BaselineGridTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="This is a course studied in the Junior High School level to help students in improving their oral &amp; written skills in English."
        android:textSize="14sp"
        android:textAppearance="@style/TextAppearance.HomeTutorAppTheme.SmallTitle"
        android:id="@+id/subject_desc" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/padding_normal"
        android:layout_marginTop="@dimen/spacing_micro"
        android:background="@color/divider"/>

</io.codelabs.widget.ForegroundLinearLayout>